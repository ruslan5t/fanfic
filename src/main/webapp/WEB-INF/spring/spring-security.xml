<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                    http://www.springframework.org/schema/security 
                    http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<http pattern="/css/**" security="none" />

	<http auto-config="true">
		<intercept-url pattern="/index*"
			access="ROLE_ADMIN,ROLE_USER,ROLE_ANONYMOUS" />
		<intercept-url pattern="/catalog*"
			access="ROLE_ADMIN,ROLE_USER,ROLE_ANONYMOUS" />
		<intercept-url pattern="/chapter*"
			access="ROLE_ADMIN,ROLE_USER,ROLE_ANONYMOUS" />
		<intercept-url pattern="/fanfic*"
			access="ROLE_ADMIN,ROLE_USER,ROLE_ANONYMOUS" />
		<intercept-url pattern="/find*"
			access="ROLE_ADMIN,ROLE_USER,ROLE_ANONYMOUS" />
		<intercept-url pattern="/home*"
			access="ROLE_ADMIN,ROLE_USER,ROLE_ANONYMOUS" />
		<intercept-url pattern="/user*"
			access="ROLE_ADMIN,ROLE_USER,ROLE_ANONYMOUS" />
		<intercept-url pattern="/addChapter*" access="ROLE_ADMIN,ROLE_USER" />
		<intercept-url pattern="/createFanfic*" access="ROLE_ADMIN,ROLE_USER" />
		<intercept-url pattern="/editChapter*" access="ROLE_ADMIN,ROLE_USER" />
		<intercept-url pattern="/editFanfic*" access="ROLE_ADMIN,ROLE_USER" />
		<intercept-url pattern="/editFanfic*" access="ROLE_ADMIN,ROLE_USER" />
		<intercept-url pattern="/editFanfic*" access="ROLE_ADMIN,ROLE_USER" />
		<intercept-url pattern="/allUsers*" access="ROLE_ADMIN" />
		<form-login login-page="/signIn" default-target-url="/"
			authentication-failure-url="/signIn/error" />
		<anonymous username="guest" granted-authority="ROLE_ANONYMOUS" />
		<remember-me />
	</http>


	<beans:bean id="userDetailsService"
		class="by.itransition.fanfic.service.impl.CustomUserDetailsService" />
	<beans:bean
		class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler" />

	<authentication-manager>
		<authentication-provider user-service-ref="userDetailsService">
		</authentication-provider>

	</authentication-manager>
</beans:beans>   